<Window x:Class="HomeMenuEditor3DSUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:HomeMenuEditor3DSUI"
        Title="Home Menu Editor 3DS" Height="600" Width="800">
    <Window.Resources>
        <!-- Data Templates for Titles and Folders -->
        <DataTemplate x:Key="TitleTemplate" DataType="{x:Type local:SlotViewModel}">
            <Button Width="50" Height="50" Click="TitleButton_Click">
                <Image Source="{Binding IconPath}" Stretch="UniformToFill"/>
            </Button>
        </DataTemplate>

        <DataTemplate x:Key="FolderTemplate" DataType="{x:Type local:SlotViewModel}">
            <Button Width="50" Height="50" Click="TitleButton_Click">
                <TextBlock Text="F" HorizontalAlignment="Center" VerticalAlignment="Center"
                           FontSize="24" FontWeight="Bold"/>
            </Button>
        </DataTemplate>

        <!-- DataTemplateSelector -->
        <local:SlotViewModelTemplateSelector x:Key="SlotTemplateSelector"
                                             TitleTemplate="{StaticResource TitleTemplate}"
                                             FolderTemplate="{StaticResource FolderTemplate}"/>
    </Window.Resources>

    <StackPanel>
        <ItemsControl ItemsSource="{Binding Slots}"
                      ItemTemplateSelector="{StaticResource SlotTemplateSelector}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="10"/>
                    <!-- 10 columns -->
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <!-- Save and Reload Buttons -->
            <Button Content="Save" Click="SaveButton_Click" Margin="5"/>
            <Button Content="Reload" Click="ReloadButton_Click" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>